<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <%= image_tag @product.picture, width: 300 if @product.picture? %>
</p>

<p>
  <strong>Kind:</strong>
  <%= @product.kind %>
</p>

<p>
  <strong>Cost:</strong>
  <%= @product.cost %>
</p>

<button class="btn btn-info"><%= link_to 'Edit', edit_product_path(@product) %></button> |
<button class="btn btn-default"><%= link_to 'Back', products_path %></button>
